<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape>
            <corners android:radius="3dp" />

            <solid android:color="@color/button_green_dark" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="3dp" />

            <stroke
                android:width="2dp"
                android:color="@color/button_green_light" />

            <solid android:color="@android:color/transparent" />

            <padding 
                android:bottom="4dp"
                android:top="4dp"
                android:left="12dp"
                android:right="12dp" />
        </shape>
    </item>

</layer-list>